<script>
const facts=[
"Walking 1 km saves enough CO‚ÇÇ to power a fan for 2 hours.",
"Cycling 5 km burns more calories than 20 minutes of yoga.",
"Replacing short car trips can reduce urban emissions by 30%."
];

let index=0;
setInterval(()=>{
  document.getElementById("fact").innerText=facts[index];
  index=(index+1)%facts.length;
},3000);

function updateInput(){
  const a=document.getElementById("activity").value;
  const l=document.getElementById("inputLabel");
  const v=document.getElementById("value");
  if(a==="walking"){l.innerText="Enter Steps";v.placeholder="e.g. 4000";}
  else if(a==="cycling"){l.innerText="Enter Distance (km)";v.placeholder="e.g. 5";}
  else if(a==="running"){l.innerText="Enter Time (minutes)";v.placeholder="e.g. 30";}
}

function calculateImpact(){
  const a=document.getElementById("activity").value;
  const v=parseFloat(document.getElementById("value").value);
  if(!a||!v||v<=0){alert("Enter valid input");return;}

  let cal=0, car=0;
  if(a==="walking"){cal=v*0.04;car=(v/1000)*0.04;}
  if(a==="cycling"){cal=v*30;car=v*0.21;}
  if(a==="running"){cal=v*10;car=v*0.12;}

  document.getElementById("calories").innerText=cal.toFixed(1);
  document.getElementById("carbon").innerText=car.toFixed(2);

  document.getElementById("calBar").style.width=Math.min(cal/10,100)+"%";
  document.getElementById("carBar").style.width=Math.min(car*50,100)+"%";

  const score=(cal+car*100).toFixed(0);
  document.getElementById("ecoScore").innerText=score;

  updateBadges(cal,car);
  document.getElementById("communityImpact").innerText=
    `If 1,000 people did this daily, ${ (car*1000).toFixed(0) } kg CO‚ÇÇ would be saved per day.`;
}

function updateBadges(cal,car){
  let html="";
  if(cal>100) html+='<span class="badge">üå± Green Starter</span>';
  if(cal>300) html+='<span class="badge">üî• Eco Warrior</span>';
  if(car>1) html+='<span class="badge">üåç Planet Hero</span>';
  document.getElementById("badges").innerHTML=html;
}
</script>

